<Page x:Class="JustMuesli.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:JustMuesli.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Authorization">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Login:" />
                <TextBox Width="150"
                         Margin="30,0,0,0"
                         Name="TextBoxLogin" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="0,20,0,0">
                <TextBlock Text="Password:" />
                <TextBox Width="150"
                         Margin="10,0,0,0"
                         x:Name="TextBoxPassword" />
            </StackPanel>
            <CheckBox Margin="0,10,0,0" Content="Remember me" Name="CheckBoxRemember" />
            <Button Margin="0,10,0,0" Content="Login" Name="ButtonLogin" Click="ButtonLogin_Click"/>
            <Button Margin="0,10,0,0" Name="ButtonExit" Content="Exit" Click="ButtonExit_Click"/>
        </StackPanel>
    </Grid>
</Page>
